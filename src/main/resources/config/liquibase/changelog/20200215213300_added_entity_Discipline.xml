<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    
    <!--
        Added the entity Discipline.
    -->
    <changeSet id="20200215213300-1" author="jhipster">
        <createTable tableName="discipline">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="department" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="hours_for_lecture" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="hours_for_workshop" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="hours_for_exercise" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="semester" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="number_of_students" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="incoming_test" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="type_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_discipline_type_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

    <changeSet id="20200215213300-1-relations" author="jhipster">

        <createTable tableName="discipline_lectos">
            <column name="lectos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="discipline_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="discipline_id, lectos_id" tableName="discipline_lectos"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
